/* Iron Spur Equity - Main JavaScript */

// Modal functionality
function openModal(name, title, img, bio) {
  const modal = document.getElementById('bioModal');
  const modalName = document.getElementById('modalName');
  const modalTitle = document.getElementById('modalTitle');
  const modalImage = document.getElementById('modalImage');
  const modalBio = document.getElementById('modalBio');
  
  modalName.textContent = name;
  modalTitle.textContent = title;
  modalImage.src = img;
  modalImage.alt = `Portrait of ${name}`;
  modalBio.textContent = bio;
  
  modal.classList.remove('hidden');
  document.body.style.overflow = 'hidden';
}

function closeModal() {
  const modal = document.getElementById('bioModal');
  modal.classList.add('hidden');
  document.body.style.overflow = 'auto';
}

// Team card click handlers
document.addEventListener('DOMContentLoaded', function() {
  const teamCards = document.querySelectorAll('.team-card');
  
  teamCards.forEach(card => {
    card.addEventListener('click', function() {
      const name = this.dataset.name;
      const title = this.dataset.title;
      const img = this.dataset.img;
      const bio = this.dataset.bio;
      openModal(name, title, img, bio);
    });
  });
});

// Close modal on backdrop click
document.getElementById('bioModal')?.addEventListener('click', function(e) {
  if (e.target === this) {
    closeModal();
  }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeModal();
  }
});

// Animated donut chart
function createDonutChart() {
  const svg = document.getElementById('donutChart');
  if (!svg) return;

  const data = [
    { label: 'Multi-Family', percentage: 45, color: '#A31F34' },
    { label: 'Strategic Land', percentage: 35, color: '#D4AF37' },
    { label: 'Development', percentage: 20, color: '#F4A300' }
  ];

  const center = 100;
  const radius = 80;
  const innerRadius = 50;
  let currentAngle = -Math.PI / 2;

  data.forEach((item, index) => {
    const sliceAngle = (item.percentage / 100) * 2 * Math.PI;
    
    // Calculate path for donut segment
    const x1 = center + radius * Math.cos(currentAngle);
    const y1 = center + radius * Math.sin(currentAngle);
    
    const x2 = center + radius * Math.cos(currentAngle + sliceAngle);
    const y2 = center + radius * Math.sin(currentAngle + sliceAngle);
    
    const x3 = center + innerRadius * Math.cos(currentAngle + sliceAngle);
    const y3 = center + innerRadius * Math.sin(currentAngle + sliceAngle);
    
    const x4 = center + innerRadius * Math.cos(currentAngle);
    const y4 = center + innerRadius * Math.sin(currentAngle);

    const largeArc = sliceAngle > Math.PI ? 1 : 0;

    const pathData = [
      `M ${x1} ${y1}`,
      `A ${radius} ${radius} 0 ${largeArc} 1 ${x2} ${y2}`,
      `L ${x3} ${y3}`,
      `A ${innerRadius} ${innerRadius} 0 ${largeArc} 0 ${x4} ${y4}`,
      'Z'
    ].join(' ');

    const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
    path.setAttribute('d', pathData);
    path.setAttribute('fill', item.color);
    path.setAttribute('opacity', '0.9');
    path.setAttribute('stroke', '#070F2B');
    path.setAttribute('stroke-width', '2');
    
    // Animate on load
    path.style.animation = `chartDraw 1s ease-out ${index * 0.2}s forwards`;
    path.style.opacity = '0';
    
    path.addEventListener('mouseenter', function() {
      this.setAttribute('opacity', '1');
      this.setAttribute('stroke-width', '3');
    });
    
    path.addEventListener('mouseleave', function() {
      this.setAttribute('opacity', '0.9');
      this.setAttribute('stroke-width', '2');
    });

    svg.appendChild(path);
    
    currentAngle += sliceAngle;
  });

  // Add center circle
  const centerCircle = document.createElementNS('http://www.w3.org/2000/svg', 'circle');
  centerCircle.setAttribute('cx', center);
  centerCircle.setAttribute('cy', center);
  centerCircle.setAttribute('r', innerRadius);
  centerCircle.setAttribute('fill', '#070F2B');
  centerCircle.setAttribute('stroke', '#D4AF37');
  centerCircle.setAttribute('stroke-width', '2');
  svg.appendChild(centerCircle);

  // Add center text
  const centerText = document.createElementNS('http://www.w3.org/2000/svg', 'text');
  centerText.setAttribute('x', center);
  centerText.setAttribute('y', center);
  centerText.setAttribute('text-anchor', 'middle');
  centerText.setAttribute('dy', '0.3em');
  centerText.setAttribute('fill', '#D4AF37');
  centerText.setAttribute('font-size', '14');
  centerText.setAttribute('font-weight', 'bold');
  centerText.textContent = 'ALLOCATION';
  svg.appendChild(centerText);
}

// Initialize chart when page loads
document.addEventListener('DOMContentLoaded', createDonutChart);

// Scroll animations - Intersection Observer
const observerOptions = {
  threshold: 0.1,
  rootMargin: '0px 0px -100px 0px'
};

const observer = new IntersectionObserver(function(entries) {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('animate-fadeIn');
      observer.unobserve(entry.target);
    }
  });
}, observerOptions);

// Observe all article elements
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('article, .section-animate').forEach(el => {
    observer.observe(el);
  });
});

// Counter animation for stats
function animateCounter(element, target, duration = 2000) {
  let current = 0;
  const increment = target / (duration / 16);
  
  const timer = setInterval(() => {
    current += increment;
    if (current >= target) {
      current = target;
      clearInterval(timer);
    }
    element.textContent = Math.floor(current).toLocaleString();
  }, 16);
}

// Smooth scroll for anchor links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
  anchor.addEventListener('click', function(e) {
    const href = this.getAttribute('href');
    if (href !== '#' && document.querySelector(href)) {
      e.preventDefault();
      document.querySelector(href).scrollIntoView({
        behavior: 'smooth',
        block: 'start'
      });
    }
  });
});

// Header scroll effect
let lastScrollY = 0;
const header = document.querySelector('header');

window.addEventListener('scroll', () => {
  lastScrollY = window.scrollY;
  
  if (lastScrollY > 10) {
    header?.classList.add('shadow-xl');
  } else {
    header?.classList.remove('shadow-xl');
  }
});

// Respect prefers-reduced-motion
const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

if (prefersReducedMotion) {
  document.documentElement.style.scrollBehavior = 'auto';
}

// Performance: Lazy load animations
const animationObserver = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.style.animation = entry.target.dataset.animation;
      animationObserver.unobserve(entry.target);
    }
  });
}, { threshold: 0.1 });

// Example: Add data-animation to elements you want to lazy-animate
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('[data-animation]').forEach(el => {
    animationObserver.observe(el);
  });
});

// Utility function to add 3D tilt to team images
function enableTiltEffect() {
  const images = document.querySelectorAll('.team-card img');
  
  images.forEach(img => {
    const card = img.closest('.team-card');
    
    card?.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      
      const rotateX = ((y - rect.height / 2) / rect.height) * 5;
      const rotateY = ((x - rect.width / 2) / rect.width) * 5;
      
      img.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.05)`;
    });
    
    card?.addEventListener('mouseleave', () => {
      img.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) scale(1)';
    });
  });
}

document.addEventListener('DOMContentLoaded', enableTiltEffect);

// Log initialization complete
console.log('Iron Spur Equity - JavaScript loaded successfully');
